---

<section id="gallery" class="relative bg-white overflow-hidden">
  {/* Decorative elements */}
  <div class="absolute top-0 left-0 w-full h-24 bg-gradient-to-b from-gray-50 to-transparent"></div>
  
  <div class="section">
    <div class="container">
      <div class="section-title">
        <span class="text-primary-600 font-medium">Our Gallery</span>
        <h2>Food Gallery</h2>
        <div class="divider"></div>
        <p class="text-gray-600 max-w-3xl mx-auto">
          Take a look at some of our delicious and healthy vegetarian dishes that will delight your taste buds.
        </p>
      </div>
      
      {/* Gallery Grid */}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {galleryImages.map((image) => (
          <div 
            key={image.id}
            class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
          >
            <img 
              src={image.src} 
              alt={image.alt}
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <div class="text-white">
                <span class="inline-block px-2 py-1 text-xs font-medium bg-primary-600 rounded-full mb-2">
                  {image.category.charAt(0).toUpperCase() + image.category.slice(1)}
                </span>
                <h3 class="font-semibold text-lg">{image.alt}</h3>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      {/* Stats */}
      <div class="bg-primary-50 rounded-2xl p-8 md:p-12 grid grid-cols-2 md:grid-cols-4 gap-8">
        {galleryStats.map((stat, index) => {
          const Icon = stat.icon;
          return (
            <div key={index} class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center text-primary-600">
                <Icon class="w-8 h-8" />
              </div>
              <h3 class="text-3xl font-bold text-gray-900 mb-1">{stat.number}</h3>
              <p class="text-gray-600">{stat.label}</p>
            </div>
          );
        })}
      </div>
    </div>
  </div>
  
  {/* Decorative elements */}
  <div class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white to-transparent"></div>
</section>
