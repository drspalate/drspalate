---
// Define the props interface
export interface Props {
  item: {
    name: string;
    price: string;
    description: string;
    image?: string;
    isPopular?: boolean;
    isVegan?: boolean;
    isSpicy?: boolean;
    nutrition: {
      calories: string;
      protein: string;
      carbs: string;
      fat: string;
      fiber: string;
    };
  };
}

// Destructure props
const { item } = Astro.props;
---

<div class="group bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden border border-gray-100 hover:border-primary-100 transform hover:-translate-y-1 flex flex-col h-full">
  <div class="relative h-52 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    <img 
      src={item.image || 'https://images.unsplash.com/photo-1544025162-d76694265947?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'} 
      alt={item.name}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
    {item.isPopular && (
      <span class="absolute top-3 left-3 bg-yellow-400 text-yellow-900 text-xs font-semibold px-2.5 py-0.5 rounded-full">
        Popular
      </span>
    )}
  </div>
  <div class="p-5 flex-grow flex flex-col">
    <div class="flex justify-between items-start">
      <h3 class="text-xl font-bold text-gray-900">{item.name}</h3>
      <span class="text-lg font-bold text-primary-600 whitespace-nowrap ml-2">{item.price}</span>
    </div>
    <p class="mt-2 text-gray-600">{item.description}</p>
    <div class="mt-3 flex flex-wrap gap-2">
      {item.isVegan && (
        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-green-100 text-green-800 flex items-center">
          <span class="mr-1">üå±</span> Vegan
        </span>
      )}
      {item.isSpicy && (
        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800 flex items-center">
          <span class="mr-1">üå∂Ô∏è</span> Spicy
        </span>
      )}
    </div>
    
    {/* Nutritional Information */}
    <div class="mt-3 pt-3 border-t border-gray-100">
      <div class="grid grid-cols-5 gap-1.5 text-center text-xs">
        <div class="bg-blue-50 p-1.5 rounded">
          <div class="font-semibold text-blue-700">{item?.nutrition?.calories}</div>
          <div class="text-gray-500 text-2xs">Calories</div>
        </div>
        <div class="bg-green-50 p-1.5 rounded">
          <div class="font-semibold text-green-700">{item?.nutrition?.protein}</div>
          <div class="text-gray-500 text-2xs">Protein</div>
        </div>
        <div class="bg-yellow-50 p-1.5 rounded">
          <div class="font-semibold text-yellow-700">{item?.nutrition?.carbs}</div>
          <div class="text-gray-500 text-2xs">Carbs</div>
        </div>
        <div class="bg-purple-50 p-1.5 rounded">
          <div class="font-semibold text-purple-700">{item?.nutrition?.fat}</div>
          <div class="text-gray-500 text-2xs">Fat</div>
        </div>
        <div class="bg-pink-50 p-1.5 rounded">
          <div class="font-semibold text-pink-700">{item?.nutrition?.fiber}</div>
          <div class="text-gray-500 text-2xs">Fiber</div>
        </div>
      </div>
    </div>
  </div>
</div>